/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}

.header {
  margin-top: 80rpx;
  margin-bottom: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.form {
  flex: 1;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.input {
  width: 100%;
  height: 88rpx;
  background-color: #F5F5F5;
  border-radius: 44rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.code-input-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.code-input {
  flex: 1;
}

.code-btn {
  width: 200rpx;
  height: 88rpx;
  background-color: #4A90E2;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.code-btn.disabled {
  background-color: #CCCCCC;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background-color: #4A90E2;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn.disabled {
  background-color: #CCCCCC;
}

.register-link {
  text-align: center;
  font-size: 28rpx;
  color: #4A90E2;
  margin-top: 30rpx;
}

.footer {
  margin-top: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}

.agreement {
  color: #999999;
}

.link {
  color: #4A90E2;
}