/* pages/activities/activities.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.tab {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1aad19;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1aad19;
  border-radius: 2rpx;
}

.activity-list {
  padding: 10rpx;
}

.activity-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.activity-item:active {
  transform: scale(0.98);
}

.activity-image {
  width: 100%;
  height: 360rpx;
}

.activity-info {
  padding: 24rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.activity-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 16rpx;
}

.activity-status.ongoing {
  background: #e8f7e8;
  color: #1aad19;
}

.activity-status.expired {
  background: #f5f5f5;
  color: #999;
}

.activity-status.upcoming {
  background: #e6f7ff;
  color: #1890ff;
}

.activity-meta {
  color: #666;
}

.time-info {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.icon-small {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.activity-time {
  font-size: 26rpx;
  color: #666;
}

.activity-brief {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.activity-item.expired {
  opacity: 0.8;
}

.activity-item.upcoming {
  opacity: 0.9;
} 