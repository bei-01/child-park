/* pages/children/children.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 儿童列表样式 */
.children-list {
  margin-bottom: 30rpx;
}

.child-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.child-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.child-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.child-actions {
  display: flex;
  gap: 20rpx;
}

.edit-btn, .delete-btn {
  font-size: 28rpx;
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
}

.edit-btn {
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
}

.delete-btn {
  color: #ff4d4f;
  background-color: rgba(255, 77, 79, 0.1);
}

.child-details {
  font-size: 28rpx;
  color: #666;
}

.detail-item {
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.label {
  color: #999;
  width: 160rpx;
}

.value {
  color: #333;
  flex: 1;
}

/* 添加儿童按钮样式 */
.add-child {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #07c160;
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
}

.add-icon {
  font-size: 36rpx;
  font-weight: bold;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}

.modal-header {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.modal-body {
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-item .label {
  display: block;
  margin-bottom: 10rpx;
  color: #333;
}

.form-item input,
.form-item textarea {
  width: 100%;
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.form-item textarea {
  height: 160rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
}

.modal-footer button {
  flex: 1;
  margin: 0;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #07c160;
  color: #fff;
}

.picker {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
} 