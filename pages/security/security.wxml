<!--pages/security/security.wxml-->
<view class="container">
  <view class="section">
    <view class="section-title">账号安全</view>
    <view class="menu-list">
      <view class="menu-item" bindtap="changePassword">
        <text class="menu-text">修改密码</text>
        <text class="menu-arrow">></text>
      </view>
      <view class="menu-item" bindtap="bindPhone">
        <text class="menu-text">绑定手机</text>
        <text class="menu-value">{{phoneNumber || '未绑定'}}</text>
        <text class="menu-arrow">></text>
      </view>
      <view class="menu-item" bindtap="bindEmail">
        <text class="menu-text">绑定邮箱</text>
        <text class="menu-value">{{email || '未绑定'}}</text>
        <text class="menu-arrow">></text>
      </view>
    </view>
  </view>

  <view class="section">
    <view class="section-title">安全中心</view>
    <view class="menu-list">
      <view class="menu-item" bindtap="loginHistory">
        <text class="menu-text">登录记录</text>
        <text class="menu-arrow">></text>
      </view>
      <view class="menu-item" bindtap="deviceManagement">
        <text class="menu-text">设备管理</text>
        <text class="menu-arrow">></text>
      </view>
    </view>
  </view>
</view> 