/* pages/booking/booking.wxss */
.page-container {
  padding: 30rpx;
  padding-bottom: 330rpx; /* 增加底部padding，为底部导航栏、白色条带和支付栏留出空间 */
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
  position: relative;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-child {
  font-size: 28rpx;
  color: #07c160;
}

.picker {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.children-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.child-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.child-item.selected {
  background: #e8f7e8;
  border: 2rpx solid #07c160;
}

.child-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.child-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.child-detail {
  font-size: 24rpx;
  color: #666;
}

.select-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #07c160;
  font-size: 32rpx;
}

.children-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

.no-children {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 右下角浮动按钮 */
.floating-button {
  position: fixed;
  right: 30rpx;
  bottom: 180rpx; /* 增加这个值，按钮会往上移 */
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  z-index: 100;
}

.floating-button:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.selected-children {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.selected-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.selected-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.selected-item {
  font-size: 26rpx;
  color: #666;
  padding: 10rpx;
  background: #fff;
  border-radius: 8rpx;
}

.price-section {
  margin-top: 20rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333;
}

.price-item.total {
  border-top: 1rpx solid #eee;
  margin-top: 20rpx;
  padding-top: 20rpx;
  font-weight: bold;
}

.price {
  color: #f56c6c;
  font-weight: bold;
}

.payment-section {
  margin-top: 20rpx;
}

.payment-methods {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.payment-method {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.payment-method.selected {
  background: #e8f7e8;
  border: 2rpx solid #07c160;
}

.payment-method image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

/* 底部白色条带 */
.bottom-white-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 150rpx;
  background-color: #ffffff;
  z-index: 99;
}

/* 修改底部支付栏的样式 */
.bottom-bar {
  position: fixed;
  bottom: 150rpx; /* 调整位置，放在白色条带上方 */
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  height: 120rpx;
}

.price-display {
  font-size: 28rpx;
}

.total-price {
  color: #f56c6c;
  font-size: 36rpx;
  font-weight: bold;
}

.pay-button {
  background: #07c160;
  color: #fff;
  border: none;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.pay-button-disabled {
  background: #9be0b8;
  color: #ffffff;
  opacity: 0.8;
}