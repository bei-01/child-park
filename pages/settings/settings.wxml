<!--pages/settings/settings.wxml-->
<view class="container">
  <!-- 通用设置 -->
  <view class="section">
    <view class="section-title">通用设置</view>
    <view class="menu-list">
      <view class="menu-item">
        <text class="menu-text">消息通知</text>
        <switch checked="{{settings.notification}}" bindchange="onNotificationChange" color="#4A90E2"/>
      </view>
      <view class="menu-item">
        <text class="menu-text">位置信息</text>
        <switch checked="{{settings.location}}" bindchange="onLocationChange" color="#4A90E2"/>
      </view>
    </view>
  </view>

  <!-- 其他设置 -->
  <view class="section">
    <view class="section-title">其他设置</view>
    <view class="menu-list">
      <view class="menu-item" bindtap="clearCache">
        <text class="menu-text">清除缓存</text>
        <text class="menu-value">{{cacheSize}}</text>
      </view>
      <view class="menu-item" bindtap="checkUpdate">
        <text class="menu-text">检查更新</text>
        <text class="menu-value">当前版本 {{version}}</text>
      </view>
      <view class="menu-item" bindtap="navigateToAbout">
        <text class="menu-text">关于我们</text>
        <text class="menu-arrow">></text>
      </view>
    </view>
  </view>
</view> 