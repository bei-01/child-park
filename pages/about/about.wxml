<!--pages/about/about.wxml-->
<view class="container">
  <!-- 应用信息 -->
  <view class="app-info">
    <image class="app-logo" src="/assets/images/logo.png" mode="aspectFit"></image>
    <text class="app-name">儿童乐园</text>
    <text class="app-version">版本 {{version}}</text>
  </view>

  <!-- 功能列表 -->
  <view class="section">
    <view class="menu-list">
      <view class="menu-item" bindtap="viewPrivacyPolicy">
        <text class="menu-text">隐私政策</text>
        <text class="menu-arrow">></text>
      </view>
      <view class="menu-item" bindtap="viewUserAgreement">
        <text class="menu-text">用户协议</text>
        <text class="menu-arrow">></text>
      </view>
    </view>
  </view>

  <!-- 版权信息 -->
  <view class="copyright">
    <text>Copyright © 2024 儿童乐园</text>
    <text>All Rights Reserved</text>
  </view>
</view>