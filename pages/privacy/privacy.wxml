<!--pages/privacy/privacy.wxml-->
<view class="container">
  <view class="section">
    <view class="section-title">隐私设置</view>
    <view class="menu-list">
      <view class="menu-item">
        <text class="menu-text">位置信息</text>
        <switch checked="{{privacy.location}}" bindchange="onLocationChange" color="#4A90E2"/>
      </view>
    </view>
  </view>

  <view class="section">
    <view class="section-title">数据设置</view>
    <view class="menu-list">
      <view class="menu-item">
        <text class="menu-text">个性化推荐</text>
        <switch checked="{{privacy.recommendation}}" bindchange="onRecommendationChange" color="#4A90E2"/>
      </view>
      <view class="menu-item">
        <text class="menu-text">数据同步</text>
        <switch checked="{{privacy.sync}}" bindchange="onSyncChange" color="#4A90E2"/>
      </view>
    </view>
  </view>
</view>