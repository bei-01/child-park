.container {
  padding: 30rpx;
}

.order-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  min-height: 300rpx;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.order-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-item:last-child {
  border-bottom: none;
}

.order-id {
  font-size: 28rpx;
  color: #333;
}

.order-status {
  font-size: 26rpx;
  color: #1296db;
} 