<view class="container">
  <view class="form">
    <view class="input-group">
      <input type="text" placeholder="请输入用户名" bindinput="onUsernameInput" value="{{username}}" />
    </view>
    
    <view class="input-group">
      <input type="text" placeholder="请输入手机号" bindinput="onPhoneInput" value="{{phone}}" />
    </view>

    <view class="input-group">
      <input type="password" placeholder="请输入密码" bindinput="onPasswordInput" value="{{password}}" />
    </view>

    <view class="input-group">
      <input type="password" placeholder="请确认密码" bindinput="onConfirmPasswordInput" value="{{confirmPassword}}" />
    </view>

    <view class="agreement">
      <checkbox-group bindchange="onAgreementChange">
        <checkbox value="agree" checked="{{isAgree}}">我已阅读并同意</checkbox>
      </checkbox-group>
      <text class="agreement-link" bindtap="showAgreement">《用户协议》</text>
    </view>

    <button class="register-btn" bindtap="handleRegister" disabled="{{!isAgree}}">注册</button>
    
    <view class="actions">
      <text bindtap="goToLogin">已有账号？去登录</text>
    </view>
  </view>
</view> 