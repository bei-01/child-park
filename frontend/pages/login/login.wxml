<view class="container">
  <view class="logo">
    <image src="/assets/images/logo.png" mode="aspectFit"></image>
  </view>
  
  <view class="form">
    <view class="input-group">
      <input type="text" placeholder="请输入用户名" bindinput="onUsernameInput" value="{{username}}" />
    </view>
    
    <view class="input-group">
      <input type="password" placeholder="请输入密码" bindinput="onPasswordInput" value="{{password}}" />
    </view>

    <button class="login-btn" bindtap="handleLogin">登录</button>
    
    <view class="actions">
      <text bindtap="goToRegister">注册账号</text>
      <text bindtap="goToForgetPassword">忘记密码</text>
    </view>
  </view>
</view> 