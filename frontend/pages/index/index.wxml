<view class="container">
  <!-- 轮播图 -->
  <swiper class="banner" indicator-dots autoplay circular>
    <swiper-item wx:for="{{banners}}" wx:key="id">
      <image src="{{item.imageUrl}}" mode="aspectFill" bindtap="onBannerClick" data-id="{{item.id}}"></image>
    </swiper-item>
  </swiper>

  <!-- 功能区 -->
  <view class="quick-actions">
    <view class="action-item" bindtap="goToBooking">
      <image src="/assets/icons/booking.png"></image>
      <text>在线预约</text>
    </view>
    <view class="action-item" bindtap="goToTickets">
      <image src="/assets/icons/ticket.png"></image>
      <text>门票购买</text>
    </view>
    <view class="action-item" bindtap="goToActivities">
      <image src="/assets/icons/activity.png"></image>
      <text>最新活动</text>
    </view>
    <view class="action-item" bindtap="goToMap">
      <image src="/assets/icons/map.png"></image>
      <text>园区导览</text>
    </view>
  </view>

  <!-- 热门项目 -->
  <view class="section">
    <view class="section-header">
      <text class="title">热门项目</text>
      <text class="more" bindtap="goToProjects">查看更多</text>
    </view>
    <scroll-view class="project-list" scroll-x>
      <view class="project-item" wx:for="{{hotProjects}}" wx:key="id" bindtap="goToProjectDetail" data-id="{{item.id}}">
        <image src="{{item.imageUrl}}" mode="aspectFill"></image>
        <view class="project-info">
          <text class="name">{{item.name}}</text>
          <text class="price">¥{{item.price}}起</text>
        </view>
      </view>
    </scroll-view>
  </view>

  <!-- 最新活动 -->
  <view class="section">
    <view class="section-header">
      <text class="title">最新活动</text>
      <text class="more" bindtap="goToActivities">查看更多</text>
    </view>
    <view class="activity-list">
      <view class="activity-item" wx:for="{{activities}}" wx:key="id" bindtap="goToActivityDetail" data-id="{{item.id}}">
        <image src="{{item.imageUrl}}" mode="aspectFill"></image>
        <view class="activity-info">
          <text class="name">{{item.name}}</text>
          <text class="time">{{item.time}}</text>
          <text class="desc">{{item.description}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 园区公告 -->
  <view class="section">
    <view class="section-header">
      <text class="title">园区公告</text>
    </view>
    <view class="notice-list">
      <view class="notice-item" wx:for="{{notices}}" wx:key="id" bindtap="showNoticeDetail" data-id="{{item.id}}">
        <text class="notice-title">{{item.title}}</text>
        <text class="notice-time">{{item.time}}</text>
      </view>
    </view>
  </view>
</view> 