.container {
  padding-bottom: 30rpx;
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 350rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 功能区样式 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background: #fff;
  margin: 20rpx 0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #333;
}

/* 通用section样式 */
.section {
  background: #fff;
  margin: 20rpx 0;
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-header .more {
  font-size: 24rpx;
  color: #666;
}

/* 热门项目样式 */
.project-list {
  white-space: nowrap;
}

.project-item {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
}

.project-item image {
  width: 280rpx;
  height: 200rpx;
  border-radius: 12rpx;
}

.project-info {
  padding: 10rpx 0;
}

.project-info .name {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.project-info .price {
  font-size: 24rpx;
  color: #ff4d4f;
  display: block;
  margin-top: 6rpx;
}

/* 活动列表样式 */
.activity-list {
  display: flex;
  flex-direction: column;
}

.activity-item {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.activity-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.activity-item image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.activity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.activity-info .name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.activity-info .time {
  font-size: 24rpx;
  color: #999;
}

.activity-info .desc {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 公告列表样式 */
.notice-list {
  display: flex;
  flex-direction: column;
}

.notice-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
} 